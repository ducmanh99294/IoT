#include <WiFi.h>
#include <PubSubClient.h>
#include <NTPClient.h>
#include <WiFiUdp.h>

// ---------- C·∫§U H√åNH ----------
const char* ssid = "Binh Quan Manh";
const char* password = "123456789";
const char* mqtt_server = "192.168.0.5"; 

#define LED_PIN     13  
#define LDR_AO_PIN  34  
#define LDR_DO_PIN  27 

WiFiClient espClient;
PubSubClient client(espClient);
WiFiUDP ntpUDP;
NTPClient timeClient(ntpUDP, "pool.ntp.org", 7*3600, 60000); 

// ---------- TR·∫†NG TH√ÅI & C·∫§U H√åNH ---------
bool lightOn = false;
String mode = "auto"; 
String scheduledOn = "22:00";
String scheduledOff = "06:00";
int ldrThreshold = 1500; 
bool useDigitalLDR = false; 

unsigned long lastAOPublish = 0;
const unsigned long AOPUBLISH_INTERVAL = 15000; 
unsigned long lastLDRAction = 0;
const unsigned long LDR_DEBOUNCE = 5000; 

// ---------- MQTT TOPIC ----------
const char* topic_control = "home/light1";
const char* topic_status  = "home/light1/status";
const char* topic_ao      = "home/light1/lux";
const char* topic_config  = "home/light1/config";

// ---------- H√ÄM H·ªñ TR·ª¢ ----------
void publishStatus(const char* s) {
  if (client.connected()) {
    client.publish(topic_status, s);
    Serial.println("üì§ Status: " + String(s));
  }
}

String getHHMM() {
  String t = timeClient.getFormattedTime();
  return t.substring(0,5);
}

bool isTimeInRange(const String& current, const String& start, const String& end) {
  if (start <= end) {
    return (current >= start && current <= end);
  } else {
    return (current >= start || current <= end);
  }
}

// ---------- MQTT CALLBACK ----------
void callback(char* topic, byte* payload, unsigned int length) {
  String msg;
  for (unsigned int i=0;i<length;i++) msg += (char)payload[i];
  Serial.print("üì® MQTT ["); Serial.print(topic); Serial.print("] -> "); Serial.println(msg);

  if (String(topic) == String(topic_control)) {
    if (msg == "ON") {
      lightOn = true;
      digitalWrite(LED_PIN, HIGH);
      publishStatus("MANUAL:ON");
      mode = "manual";
    } else if (msg == "OFF") {
      lightOn = false;
      digitalWrite(LED_PIN, LOW);
      publishStatus("MANUAL:OFF");
      mode = "manual";
    } else if (msg.startsWith("SCHEDULE:")) {
      int p = msg.indexOf(':');
      String times = msg.substring(p+1);
      int dash = times.indexOf('-');
      if (dash>0 && times.length()>=11) {
        scheduledOn = times.substring(0,5);
        scheduledOff = times.substring(dash+1, dash+6);
        Serial.print("‚è∞ Schedule: "); Serial.print(scheduledOn); Serial.print(" -> "); Serial.println(scheduledOff);
        publishStatus(("SCHEDULE:"+scheduledOn+"-"+scheduledOff).c_str());
      }
    } else if (msg.startsWith("MODE:")) {
      String m = msg.substring(5);
      if (m=="auto" || m=="manual") {
        mode = m;
        Serial.println("üîß Mode: " + mode);
        publishStatus(("MODE:"+mode).c_str());
      }
    } else if (msg.startsWith("THRESH:")) {
      String v = msg.substring(7);
      int val = v.toInt();
      if (val>0 && val<4096) {
        ldrThreshold = val;
        Serial.print("üìä Threshold: "); Serial.println(ldrThreshold);
        publishStatus(("THRESH:"+String(ldrThreshold)).c_str());
      }
    } else if (msg.startsWith("LDRTYPE:")) {
      // üî• TH√äM: ch·ªçn lo·∫°i LDR
      String t = msg.substring(8);
      if (t == "analog") {
        useDigitalLDR = false;
        publishStatus("LDRTYPE:ANALOG");
      } else if (t == "digital") {
        useDigitalLDR = true;
        publishStatus("LDRTYPE:DIGITAL");
      }
    }
  }
}

// ---------- K·∫æT N·ªêI MQTT ----------
void reconnect() {
  while (!client.connected()) {
    Serial.print("üîå MQTT connecting...");
    if (client.connect("esp32_smartlight")) {
      Serial.println("connected");
      client.subscribe(topic_control);
      publishStatus("RECONNECTED");
      client.publish(topic_config, ("MODE:"+mode).c_str());
      client.publish(topic_config, ("SCHEDULE:"+scheduledOn+"-"+scheduledOff).c_str());
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" retry in 5s");
      delay(5000);
    }
  }
}

// ---------- SETUP ----------
void setup() {
  Serial.begin(115200);
  pinMode(LED_PIN, OUTPUT);
  digitalWrite(LED_PIN, LOW);
  pinMode(LDR_DO_PIN, INPUT);

  Serial.println("üöÄ Starting Smart Light Controller...");

  // WiFi
  WiFi.begin(ssid, password);
  Serial.print("üì° Connecting WiFi");
  while (WiFi.status() != WL_CONNECTED) { 
    delay(500); 
    Serial.print(".");
  }
  Serial.println("\n‚úÖ WiFi connected, IP: " + WiFi.localIP().toString());

  // NTP & MQTT
  timeClient.begin();
  client.setServer(mqtt_server, 1883);
  client.setCallback(callback);
  
  Serial.print("‚è∞ Syncing time");
  while (!timeClient.update()) {
    timeClient.forceUpdate();
    delay(500);
    Serial.print(".");
  }
  Serial.println("\n‚úÖ Time: " + timeClient.getFormattedTime());
}

// ---------- CHECK SCHEDULE ----------
void checkSchedule() {
  static String lastCheckedMinute = "";
  String now = getHHMM();
  
  if (now != lastCheckedMinute) {
    lastCheckedMinute = now;
    
    if (mode == "auto") {
      bool shouldBeOn = isTimeInRange(now, scheduledOn, scheduledOff);
      
      if (shouldBeOn && !lightOn) {
        lightOn = true; 
        digitalWrite(LED_PIN, HIGH);
        publishStatus("AUTO:ON (Schedule)");
        Serial.println("üí° Auto ON by Schedule");
      } else if (!shouldBeOn && lightOn) {
        lightOn = false; 
        digitalWrite(LED_PIN, LOW);
        publishStatus("AUTO:OFF (Schedule)");
        Serial.println("üí° Auto OFF by Schedule");
      }
    }
  }
}

// ---------- CHECK LDR ----------
void checkLDR() {
  int lux = analogRead(LDR_AO_PIN);
  int doVal = digitalRead(LDR_DO_PIN);
  
  // üî• PUBLISH GI√Å TR·ªä LDR ƒê·ªÇ GI√ÅM S√ÅT
  if (millis() - lastAOPublish > AOPUBLISH_INTERVAL) {
    lastAOPublish = millis();
    if (client.connected()) {
      String ldrMsg = "AO:" + String(lux) + ",DO:" + String(doVal);
      client.publish(topic_ao, ldrMsg.c_str());
    }
  }

  // üî• CH·ªà X·ª¨ L√ù KHI ·ªû CH·∫æ ƒê·ªò AUTO V√Ä ƒê·ª¶ TH·ªúI GIAN DEBOUNCE
  if (mode == "auto" && (millis() - lastLDRAction > LDR_DEBOUNCE)) {
    bool ldrTriggered = false;
    
    if (useDigitalLDR) {
      // D√ôNG LDR DIGITAL
      ldrTriggered = (doVal == 1);
    } else {
      // D√ôNG LDR ANALOG
      ldrTriggered = (lux < ldrThreshold);
    }
    
    // üî• CH·ªà B·∫¨T/T·∫ÆT KHI C√ì THAY ƒê·ªîI TR·∫†NG TH√ÅI
    if (ldrTriggered && !lightOn) {
      lightOn = true;
      digitalWrite(LED_PIN, HIGH);
      lastLDRAction = millis();
      publishStatus("AUTO:ON (LDR)");
      Serial.println("üí° Auto ON by LDR");
    } else if (!ldrTriggered && lightOn) {
      lightOn = false;
      digitalWrite(LED_PIN, LOW);
      lastLDRAction = millis();
      publishStatus("AUTO:OFF (LDR)");
      Serial.println("üí° Auto OFF by LDR");
    }
  }
}

// ---------- LOOP ----------
void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  timeClient.update();
  checkSchedule();
  checkLDR();

  delay(200); 
}